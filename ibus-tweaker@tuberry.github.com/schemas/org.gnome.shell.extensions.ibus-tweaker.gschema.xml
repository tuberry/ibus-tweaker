<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.ibus-tweaker" path="/org/gnome/shell/extensions/ibus-tweaker/">
    <key type="b" name="enable-dialog">
        <default>true</default>
        <summary>enable dialog hotkey</summary>
    </key>
    <key type="b" name="enable-orientation">
        <default>false</default>
        <summary>enable orientation</summary>
    </key>
    <key type="b" name="use-custom-font">
        <default>false</default>
        <summary>use custom font</summary>
    </key>
    <key type="b" name="hide-page-button">
        <default>true</default>
        <summary>hide page button</summary>
    </key>
    <key type="b" name="enable-ms-theme">
        <default>false</default>
        <summary>enable MS theme</summary>
    </key>
    <key type="b" name="enable-auto-switch">
        <default>true</default>
        <summary>enable auto switch</summary>
    </key>
    <key type="b" name="enable-clip-history">
        <default>false</default>
        <summary>enable clip history</summary>
    </key>
    <key type="u" name="candidate-orientation">
        <range min="0" max="1"/>
        <default>0</default>
        <summary>candidate orientation</summary>
    </key>
    <key type="u" name="clip-history-page-size">
        <default>5</default>
        <range min="4" max="10"/>
        <summary>clip history page size</summary>
    </key>
    <key type="u" name="default-variant">
        <default>0</default>
        <range min="0" max="3"/>
        <summary>default color vatiant(0 - auto, 1 - light, 2 - dark, 3 - system)</summary>
    </key>
    <key type="u" name="ms-theme-color">
        <default>3</default>
        <range min="0" max="7"/>
        <summary>MS theme color</summary>
    </key>
    <key type="u" name="unkown-input-mode">
        <default>2</default>
        <range min="0" max="2"/>
        <summary>input mode of unknown windows</summary>
    </key>
    <key type="a{sb}" name="input-mode-list">
        <default>[]</default>
        <summary>input mode list</summary>
    </key>
    <key type="s" name="custom-font">
        <default>"Sans 16"</default>
        <summary>custom font</summary>
    </key>
    <key type="as" name="ibus-tweaker-clip-history">
        <default><![CDATA[['<Super>semicolon']]]></default>
        <summary>clip history shortcut</summary>
    </key>
    <key type="as" name="ibus-tweaker-run-dialog">
        <default><![CDATA[['<Super>r']]]></default>
        <summary>run-dialog</summary>
    </key>
    <key type="b" name="enable-updates">
        <default>false</default>
        <summary>enable updates indicator</summary>
    </key>
    <key type="s" name="check-updates">
        <default>"checkupdates"</default>
        <summary>command to check updates(for the Arch-based)</summary>
    </key>
    <key type="s" name="updates-dir">
        <default>"/var/lib/pacman/local"</default>
        <summary>updates dir</summary>
    </key>
  </schema>
</schemalist>
